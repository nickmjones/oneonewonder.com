<p id="notice"><%= notice %></p>

<h1>Colleagues</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Title</th>
      <th>Birthday</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colleagues.each do |colleague| %>
      <tr>
        <td><%= colleague.fname %></td>
        <td><%= colleague.lname %></td>
        <td><%= colleague.title %></td>
        <td><%= colleague.birthday %></td>
        <td><%= colleague.team_id %></td>
        <td><%= link_to 'Show', colleague %></td>
        <td><%= link_to 'Edit', edit_colleague_path(colleague) %></td>
        <td><%= link_to 'Destroy', colleague, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

