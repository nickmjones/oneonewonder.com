<aside class="sidebar">

  <div class="sidebar__dock">
    <ul class="sidebar__dock__actions">
      <li>
        <i class="material-icons">feedback</i>
      </li>
    </ul>

    <div class="sidebar__dock__auth">
      <span class="avatar">
        <%= current_user.fname[0..0] %><%= current_user.lname[0..0] %>
      </span>
    </div>
  </div>

  <div class="sidebar__links">
    <!-- this week -->
    <div class="section-title">
      <div class="section-title__name">
        <%=link_to "Coming Up", dashboard_path %>
      </div>
      <div class="section-title__decorator">
        <i class="material-icons">card_travel</i>
      </div>
    </div>

    <!-- 1:1's -->
    <div class="section-title">
      <div class="section-title__name">
        One-on-Ones
      </div>
      <div class="section-title__decorator">
        <i class="material-icons">swap_horizontal_circle</i>
      </div>
    </div>
    <ul>
      <%= active_link_to new_event_path do %>
        <li>Schedule New</li>
      <% end %>
      <li><a href="#">Add Notes</a></li>
    </ul>

    <!-- team -->
    <div class="section-title">
      <div class="section-title__name">
        Team
      </div>
      <div class="section-title__decorator">
        <i class="material-icons">assignment_ind</i>
      </div>
    </div>
    <ul class="colleagues">
      <% @team.colleagues.each do |member| %>
        <%= active_link_to member do %>
          <li>
            <span class="colorcircle" style="background-color: #<%=member.color %>;"></span><%= member.full_name %>
          </li>
        <% end %>
      <% end %>
      <li>
        <%= active_link_to "Invite Colleague", new_colleague_path %>
      </li>
      <li>
        <%= active_link_to "Team Settings", edit_team_path(@team) %>
      </li>
    </ul>

  </div>

</aside>
